<% layout("/layouts/boilerplate")%> <% success %>

<h2>All Questions</h2>

<div class="box">
    <div class="slider">
  
        <% for( let que of allQuestions ) { %>
        <a href=<%= que._id %>>1</a>
        <% } %>
        
      
        <div class="slides">
            <form action="/home" method="post">
            <% for( let que of allQuestions ) { %>
                <div id=<%= que._id %> class = "quiz-box">

                    <div class="title">
                        <h3><%= que.title %></h3>
                    </div>
                    

                    
                        <div class="options">
                            <% for( let index = 0; index < que.options.length; index++ ) { %>
                                <input type="radio" name = <%= [que.options[index] , que._id] %> id=<%= que._id %>>
                                <label for={que._id}><%= que.options[index] %></label> <br><br>
                              <% } %>
                        </div>
                        
                    

                    
                    
                  </div>
                <% } %>
                <button> Submit </button>
            </form>
          
        </div>
      </div>
</div>



